{
  "name": "YTBM",
  "version": "0.1.0",
  "description": "Bookmark Youtube Timestamps With YTBM (Youtube Bookmarker)",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://*.youtube.com/*"],
  "background": {
    "service_worker": "bg.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon.png"],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YTBM",
    "default_icon": "icon.png"
  },
  "manifest_version": 3
}